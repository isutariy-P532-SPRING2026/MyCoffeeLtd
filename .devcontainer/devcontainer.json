{
  "name": "MyCoffeeLtd (.NET 9 + Desktop)",
  "build": {
    "dockerfile": "Dockerfile"
  },

  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "vscode",
      "webPort": "6080"
    }
  },

  "forwardPorts": [6080],

  "portsAttributes": {
    "6080": {
      "label": "Desktop (noVNC)",
      "onAutoForward": "openBrowser"
    }
  },

  "remoteEnv": {
    "DISPLAY": ":1"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "avaloniaTeam.vscode-avalonia"
      ]
    }
  },

  "postCreateCommand": "dotnet restore"
}
